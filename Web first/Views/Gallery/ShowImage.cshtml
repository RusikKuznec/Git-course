@model ImageUrlIndexViewModel



@{
    Layout = "/Views/Shared/_LayoutGallery.cshtml";
}

    
  <div class="gallery">
      <div class="image">
          <img src="@Model.Url" />
      </div>
      <div>
          @foreach (var comment in Model.Comments)
         {
             <div>
                 @comment
             </div>
             
         }
      </div>
  </div> 






<form action="/Gallery/AddComment" >
    <input name="imageId" type="hidden" value="@Model.Id" />
    Add Comment<input name="Text" />
    <input type="submit" value="comment" />
</form>
